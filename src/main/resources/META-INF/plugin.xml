<idea-plugin>
    <id>org.strangeway.springevents</id>
    <name>Spring Events Navigator</name>
    <version>0.1.0</version>
    <vendor email="info@strangeway.org" url="https://strangeway.org">StrangeWay Org</vendor>

    <description><![CDATA[
      Advanced navigation for Spring Events: gutter icons and usage finder
    ]]></description>

    <change-notes><![CDATA[
      Implemented navigation for events, senders and receivers.
    ]]>
    </change-notes>

    <idea-version since-build="191.0"/>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <codeInsight.lineMarkerProvider
                language="JAVA"
                implementationClass="com.haulmont.intellij.cubaevents.SpringEventsLineMarkerProvider"/>

        <implicitUsageProvider
                implementation="com.haulmont.intellij.cubaevents.SpringEventsImplicitUsageProvider"/>
    </extensions>

    <depends>com.intellij.modules.java</depends>

</idea-plugin>